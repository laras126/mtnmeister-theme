            <header class="article-section-header">
                <div class="number-wrap">
                    <div class="number"><span class="meta">Gear</span></div>
                </div>
            </header>
        
        </section>

        <section class="article-section">

            <header class="article-section-header">
                <div class="number-wrap">
                    <div class="number"><span class="meta">Deals</span></div>
                </div>
            </header>
        
        </section> #}
    </div>
</div>


{% endblock %}