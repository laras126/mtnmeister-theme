<div class="container">
    <div class="row">
        
        <div class="col-xs-12 col-sm-3">
            <div class="col-xs-8">
                <h1 class="header-logo">
                    <a class="header-logo-link" href="/" title="{{site.name}}" rel="home">{{site.name}}</a>
                </h1>    
            </div>
            <div class="col-xs-4">
                <a href="#menu" class="menu-link">
                  <span></span>
                  <span></span>
                  <span></span>
                </a>    
            </div>

        </div>
        <div class="col-xs-12 col-sm-9 text-right">
            <nav id="menu" class="nav-main" role="navigation">
                <ul>
                {% for item in main_nav.items %}
                    <li id="menu-item-{{item.ID}}" class="menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}">
                        <a href="{{item.link}}">{{item.title}}</a>
                    </li>
                {% endfor %}
                </ul>
            </nav><!-- #menu -->
        </div>

    </div>
</div>