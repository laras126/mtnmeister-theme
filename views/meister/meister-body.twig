	<section class="article-body-block clearfix container-squish">

		<div class="col-sm-6">
			<p>{{post.meister_bio}}</p>
			{% include 'partials/cat-list.twig' %}
			
			<p>SHARE BUTTONS HERE</p>
		</div>

		<div class="col-sm-6">
			<br>
			<img src="{{TimberImage(post.meister_pic).src}}" alt="{{post.title}}">
		</div>

	</section>


	<div class="article-body-block container">
        <blockquote class="featured-quote">{{post.quote_text}}</blockquote>
        {% if post.quote_time_in_episode %}
        	<p class="text-right meta">Time in episode: {{post.quote_time_in_episode}}</p>
    	{% endif %}
    	<button class="button"><a href="{{post.quote_tweet_link}}" target="blank" title="Click to Tweet">Click to Tweet</a></button>
	</div>

	<section class="article-body-block container-squish">
		<h3>Gear Recommendations</h3>
		<p class="lead">If you could recommend one piece of gear...</p>
		{% for item in post.get_field('gear_recommendations') %}
		<div class="item">
			<div class="item-desc">
			    <h4><a href="{{item.gear_link}}" title="{{item.title}}">{{item.gear_title}}</a> <span class="meta">[Link]</span></h4>
			    <p>{{item.gear_description}}</p>
			    {% if item.time_in_episode %}
					<p class="meta">Time in episode: {{item.time_in_episode}}</p>
				{% endif %}

			    {% set deals = TimberPost(item.gear_to_deal) %}

				{% if deals %}

					{% for deal in deals %}
						<p>Meister deal!: {{deal.title}}</p>
					{% endfor %}
		
				{% endif %}

			 </div>
			 <div class="item-img">
			 	<a href="{{item.gear_link}}" title="{{item.title}}"><img src="{{TimberImage(item.gear_photo).src}}" alt="{{item.title}}"></a>
			 </div>
		</div>
		
		{% endfor %}
	</section>
