<ul>
    {% for cat in post.categories %}
        <li><a href="{{cat.link}}">{{cat.name}}</a></li>
    {% endfor %}
</ul>

<h3>Tagged</h3>
<ul>
    {% for tag in post.tags %}
        <li><a href="{{tag.link}}">{{tag.name}}</a></li>
    {% endfor %}
</ul>

<section class="article-body-block">
	<h3>Best Quotes</h3>
    {% for item in post.get_field('quotes') %}
        <div class="item">
            <blockquote>{{item.quote_text}}</blockquote>
            <p>Time in episode: {{item.time_in_episode}}</p>
        </div>
    {% endfor %}
</section>

<section class="article-body-block">
	<h3>Gear Recommendations</h3>

	{% for item in post.get_field('gear_recommendations') %}
	
		<div class="item">
		    <h4>{{item.gear_title}}</h4>
		    <img src="{{TimberImage(item.gear_photo).src}}" alt="{{item.title}}">
		    <h6>{{item.time_in_episode}}</h6>
		    <p>{{item.gear_description}}</p>
			
		    <p>
		    	<a href="{{item.gear_link}}" title="{{item.title}}" class="link-more">On the Web</a>
		    </p>

			{% set deals = TimberPost(item.gear_to_deal) %}

			{% if deals %}

				{% for deal in deals %}
					<p>Meister deal!: {{deal.title}}</p>
				{% endfor %}
	
			{% endif %}

		</div>
	
	{% endfor %}

</section>