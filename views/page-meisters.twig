{% extends "page.twig" %}

{% block below_title %}
	<div class="clearfix spacer-bot">
		{% for m in meisters|slice(0,1) %}
			{% include 'tease/tease-todays_meister.twig' %}
		{% endfor %}
	</div>
{% endblock %}

{% block loop %}
	<div class="clearfix spacer-top">
		{% for m in meisters|slice(1, 1) %}
			{% include ['tease/tease-meister.twig', 'tease/tease.twig'] %}
		{% endfor %}
	</div>
{% endblock %}

{% block loop_minor %}
	
		<div class="loop-thumbs contain">
			<div class="row-sm">
			{% for m in meisters|slice(2) %}
				{% include ['tease/tease-minor_meister.twig', 'tease/tease.twig'] %}
			{% endfor %}
		</div>
	</div>
{% endblock %}