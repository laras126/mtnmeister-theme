{% set pic = TimberImage(image).src %}
<img
  data-sizes="auto"
  data-src="{{pic|resize(100)}}"
  data-srcset="{{pic|resize(500)}} 300w,
  {{pic|resize(700)}} 600w,
  {{pic|resize(900)}} 1000w"
  src="{{site.url}}/wp-content/themes/mtnmeister-theme/assets/img/util/loader.gif"
  class="lazyload blur-up"
  alt="{{post.title|striptags}}" />
