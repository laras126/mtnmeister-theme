
{# 
	The partial for pictures, included in:
		- single.twig

	Arguments:
		- loc: inline location
		- image: image file
		- wrap: use large or inline picture
		- size: image size
		- credit: image credit
		- credit_link: image credit link
 #}

<figure class="image-wrap{% if wrap %} inline-{{ loc }}{% endif %} image-{{size and wrap ? size : 'full bleed-left'}}">
	
	{% if wrap %}
		{% include 'partials/pictures/_picture-inline.twig'%}
	{% else %}
		{% include 'partials/pictures/_picture-caption.twig'%}
	{% endif %}

	{% include 'partials/micro/image-credit.twig' %}

</figure> <!-- /.image-wrap -->