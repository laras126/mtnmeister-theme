{% block content %}

	<article class="type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="article-content">
			<h1 class="article-title">{{post.title}}</h1>
			<div class="article-body">
				{{post.content}}
			</div>
		</section>

		{% include 'partials/edit-link.twig' %}
	</article>

{% endblock %}

