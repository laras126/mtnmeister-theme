{% extends "tease.twig" %}

{% block content %}

	<header class="tease-header">
		<div class="number-wrap">
			<div class="number">
				<span># {{post.episode_num}}</span>
				<span class="meta">{{post.date}}</span>
			</div>
		</div>

		<h4 class="tagline"><a href="{{post.link}}">{{post.episode_tag}}</a></h4>
		<div class="row">
			<div class="col-xs-7">
				<p class="tagline tagline-tease">{{post.title}}</p>
			</div>
			<div class="col-xs-5">
				<a class="link-more" href="{{post.link}}" title="{{post.title}}">More &rarr;</a>	
			</div>
		</div>
	</header>
	
	<div class="tease-body">
		{{post.episode_soundcloud_small}}
		{% include 'partials/cat-list.twig' %}
	</div>

{% endblock %}