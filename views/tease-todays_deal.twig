{% set d = todays_deal|first %}

<article class="tease tease-featured tease-featured-deal clearfix">

	<div class="featured-left">
		<h4><a href="{{d.deal_link}}" target="blank" title="{{d.title}}">{{d.title}}</a><svg class="shape shape-icon shape-meta"><use xlink:href="#shape-new-window"/></svg></h4>
		<p class="tagline">By: <span class="special">{{d.deal_vendor}}</span></p>
		<p>{{d.deal_desc}}</p>
		<p>{{d.deal_cta}}</p>	
		{% include "partials/deal-date-logic.twig" %}
	</div>	
	
	<div class="featured-right">
		<a href="{{d.deal_link}}" target="blank" title="{{m.title}}">
		{# This conditional is because we weren't using featured images initially, and are now - no need to add them again, at least at first. Well, it's not working. #}
		{% if d.thumbnail %}
			<img src="{{d.thumbnail.src}}" alt="{{d.title}}">
		{% elseif d.deal_pic %}
			<img src="{{TimberImage(d.deal_pic).src}}" alt="{{d.title}}">
		{% else %}
			{# TODO: this isn't working for some reason.... #}
			{% set default = site.theme.uri ~ '/assets/img/util/default-meister.png' %}
			<img src="{{default}}" alt="{{d.title}}">
		{% endif %}
		</a>
		<a class="btn-cta" href="{{d.deal_link}}" target="blank" title="{{m.title}}">Claim it</a>	
	</div>

</article> <!-- /.tease -->