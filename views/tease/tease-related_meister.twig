{% extends 'tease/tease.twig' %}

{% block content %}

	<a href="{{m.link}}" title="{{m.title}}">
	{% if m.get_thumbnail %}
		<img class="lazy" data-original="{{m.thumbnail.src('medium')}}" src="{{site.url}}/wp-content/themes/mtnmeister-theme/assets/img/util/loader.gif" alt="{{m.title}}"/>
		<noscript><img src="{{m.thumbnail.src}}" alt="{{m.title}}" height="300" width="300"></noscript>
	{% endif %}
	</a>

	<h5 class="meta"><a href="{{m.link}}" title="{{m.title}}"><span class="special">#{{m.episode_num}}</span> {{m.name}}</a></h5>

{% endblock %}