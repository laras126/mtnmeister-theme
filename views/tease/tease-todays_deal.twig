<article class="tease tease-featured tease-featured-deal clearfix">
	
	<header class="tease-header">
		{% include 'partials/micro/decor-title.twig' with {text:'Featured Deal'} %}
		<h4>
			<a href="{{d.deal_link}}" target="blank" title="{{d.post_title}}">{{d.post_title}}</a>
			<svg class="shape shape-icon shape-meta"><use xlink:href="#shape-new-window"/></svg>
		</h4>

		{% if front_page == true %}
			<div class="row">
				<div class="col-xs-8">
					<p class="tagline">By: <span class="special">{{d.deal_vendor}}</span></p>
				</div>
				<div class="col-xs-4">
					<a class="link-more" href="{{site.link}}/deals" title="{{d.title}}">All Deals &rarr;</a>
				</div>
			</div>
		{% endif %}

	</header>

	<div class="col-xs-12-np col-sm-8-np">
		{% if front_page != true %}
			<p class="tagline">By: <span class="special">{{d.deal_vendor}}</span></p>
		{% endif %}
		<p>{{d.deal_desc}}</p>
		<p class="tease-cta">{{d.deal_cta}}</p>
		{% if front_page != true %}
			{% include "partials/share-btns.twig" %}
		{% endif %}
	</div>	
	
	<div class="col-xs-12-np col-sm-4">
		<a href="{{d.deal_link}}" target="blank" title="{{d.post_title}}">
			{% if d.thumbnail %}
				<img src="{{d.thumbnail.src}}" alt="{{d.post_title}}">
			{% elseif d.deal_pic %}
				<img src="{{TimberImage(d.deal_pic).src}}" alt="{{d.post_title}}">
			{% endif %}
		</a>
		<a class="btn-cta" href="{{d.deal_link}}" target="blank" title="{{d.post_title}}">Grab it</a>	
		{% include "partials/micro/date-logic.twig" %}
	</div>

</article> <!-- /.tease -->