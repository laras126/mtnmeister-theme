
<article class="tease tease-featured">
	
	<header class="tease-header">
		<div class="decor-wrap">
			<div class="decor-text"><span># {{m.episode_num}}</span><span class="meta">{{m.date}}</span></div>
		</div>
		<h2 class="tease-title"><a href="{{m.link}}">{{m.episode_tag}}</a></h2>
		<p class="tagline tagline-tease">{{m.title}}</p>
	</header>

	<div class="tease-body row-sm">
		<div class="featured-left">
			{{m.episode_soundcloud_large}}
		</div>

		<div class="featured-right">
			{% set post = m %}
			{% include 'partials/micro/list-cats.twig' %}			
			<p>{{m.meister_bio|truncate(80)}}</p>
			<div class="clearfix">
				<div class="col-xs-12-np col-sm-6-np">
					
					{% include 'partials/share-btns.twig' %}
				</div>	
				<div class="col-xs-12-np col-sm-6-np">
					<a class="link-more no-margin" href="{{m.link}}" title="{{m.title}}">Read more &rarr;</a>
				</div>
			</div>
		</div>	
	</div>
	
</article> <!-- /.tease -->